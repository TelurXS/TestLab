@{
    ViewData["Title"] = "Registration";
}
@model FormViewModel

<link href="~/css/forms.css" rel="stylesheet" />

<div class="text-center form-holder">
    <form class="form" asp-controller="Account" asp-action="Register" method="post" id="prevent-default-form">
        <img class="mb-4" src="~/img/logo.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please register</h1>

        @if(string.IsNullOrEmpty(Model?.Message) == false) 
        {
            <div class="alert alert-danger">@Model.Message</div>
        }
        

        <div class="form-inputs">
            <input type="text" name="name" id="inputName" class="form-control" placeholder="Name" value="@Model?.Form["name"]" required autofocus>

            <input type="text" name="login" id="inputLogin" class="form-control" placeholder="Login" value="@Model?.Form["login"]" required>

            <input type="email"name="email" id="inputEmail" class="form-control" placeholder="Email address" value="@Model?.Form["email"]" required>

            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" value="@Model?.Form["password"]" required>

            <input type="password" name="confirmPassword" id="inputConfirmPassword" class="form-control" placeholder="Confirm Password" value="@Model?.Form["confirmPassword"]" required>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="termsOfUse" value="true"> <a href="/aboutus/termsofuse" class="text-dark">Terms of use</a>
            </label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    </form>
</div>

