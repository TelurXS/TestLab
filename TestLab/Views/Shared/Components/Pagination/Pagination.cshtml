@using TestLab.Entities.Pagination;
@using TestLab.Entities;
@model PaginationViewModel

@if (Model.Pages.Count() <= 1) return;

@{
    char separator = Model.RedirectTo.Contains('?') ? '&' : '?';
}

<nav class="d-flex justify-content-center">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="@Model.RedirectTo@(separator)page=@Model.FirstPage&count=@Model.CountPerPage">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Start</span>
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" href="@Model.RedirectTo@(separator)page=@Model.PreviousPage&count=@Model.CountPerPage">
                <span aria-hidden="true">&lsaquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

        @foreach (int item in Model.Pages)
        {
            if (item == Model.CurrentPage)
            {
                <li class="page-item active">
                    <a class="page-link" href="@Model.RedirectTo@(separator)page=@item&count=@Model.CountPerPage">@item</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="@Model.RedirectTo@(separator)page=@item&count=@Model.CountPerPage">@item</a>
                </li>
            }
        }

        <li class="page-item">
            <a class="page-link" href="@Model.RedirectTo@(separator)page=@Model.NextPage&count=@Model.CountPerPage">
                <span aria-hidden="true">&rsaquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" href="@Model.RedirectTo@(separator)page=@Model.LastPage&count=@Model.CountPerPage">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">End</span>
            </a>
        </li>
    </ul>
</nav>