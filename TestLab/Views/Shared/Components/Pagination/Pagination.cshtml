@using TestLab.Entities.Pagination;
@using TestLab.Entities;
@model PaginationViewModel

<nav class="d-flex justify-content-center">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="?page=@Model.FirstPage&count=@Model.PostsPerPage">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

        @foreach (int item in Model.Pages)
        {
            if (item == Model.CurrentPage)
            {
                <li class="page-item active">
                    <a class="page-link" href="?page=@item&count=@Model.PostsPerPage">@item</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@item&count=@Model.PostsPerPage">@item</a>
                </li>
            }
        }

        <li class="page-item">
            <a class="page-link" href="?page=@Model.LastPage&count=@Model.PostsPerPage">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>