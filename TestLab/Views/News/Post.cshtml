@{ 
    ViewData["Title"] = "Post";
} 
@model PostViewModel

<h1>@Model.Post.Title</h1>

<div class="text-muted d-flex justify-content-between">
    <p>Author: <a class="text-dark" href="/account/profile?id=@Model.Author?.Id">@Model.Author?.Name</a></p>
    <p>State: @Model.Post.State</p>
    <p>@Model.Post.ReleaseDate</p>
</div>

<div>@Model.Post.Content</div>

<div class="mt-3">
    <button class="btn bg-success">&hearts;</button>
    <button class="btn btn-primary" copy="/news/post?id=@Model.Post.Id">Repost &crarr;</button>
</div>

<script src="~/js/copy-button.js" defer></script>