@model Post
@using TestLab.Entities;

@{ 
    ViewData["Title"] = "Post";
} 

<h1>@Model.Title</h1>

<div class="text-muted d-flex justify-content-between">
    <p>Author: @Model.Author?.Name</p>
    <p>State: @Model.State</p>
    <p>@Model.ReleaseDate</p>
</div>

<div>@Model.Content</div>

<div class="mt-3">
    <button class="btn bg-success">&hearts;</button>
    <button class="btn btn-primary">Repost &crarr;</button>
</div>
